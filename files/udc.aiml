<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    
  <category>
      <pattern>WHERE IS *</pattern>
      <template>
          <think><set name = "state"><star /></set></think>
          <condition name = "state" value = "Germany">Germany is in Europe.</condition>
          <condition name = "state" value = "Italy">Italy is in Europe.</condition>
          <condition name = "state" value = "Spain">Spain is in Europe.</condition>
          <condition name = "state" value = "Brazil">Brazil is in South America.</condition>
          <condition name = "state" value = "Argentina">Argentina is in South America.</condition>
          <condition name = "state" value = "China">China is in Asia.</condition>
      </template>
  </category>
  
  <category>
      <pattern>LETS TALK ABOUT CATS</pattern>
      <template>
